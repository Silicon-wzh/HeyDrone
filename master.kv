#:kivy 1.10.1
#:import Joystick kivy.garden.joystick.Joystick

<MasterJoystick@Joystick>
    sticky: False
    outer_size: 1.05
    inner_size: 1.05
    pad_size:   0.5
    outer_line_width: 0.01
    inner_line_width: 0.01
    pad_line_width:   0.01
    outer_background_color: (0.75, 0.75, 0.75, 0.60)
    outer_line_color:       (0.25, 0.25, 0.25, 0.60)
    inner_background_color: (0.75, 0.75, 0.75, 0.60)
    inner_line_color:       (0.70, 0.70, 0.70, 0.60)
    pad_background_color:   (0.40, 0.40, 0.40, 0.60)
    pad_line_color:         (0.35, 0.35, 0.35, 0.60)

<Background@Button>
    size:    self.parent.size
    on_size: self.size = self.parent.size

<FullscreenImage@Image>
    size:    self.parent.size
    on_size: self.size = self.parent.size
    allow_stretch: True

<MasterWidget>
    Background:
        background_color: (0, 0, 0, 1)
    FullscreenImage:
        id: video
